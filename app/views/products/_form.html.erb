
<section class="product-form">
<%= form_with model: product do |form| %>
  <div>
    <%= form.label :name, t(".name") %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :description, t(".description"), style: "display:block" %>
    <%= form.rich_text_area :description %>
  </div>
  <div>
    <%= form.label :feature_image, t(".feature_image") , style: "display:block" %>
    <%= form.file_field :feature_image, accept: "image/*" %>
  </div>
  <div>
    <%= form.label :inventory_count, t(".inventory_count"), style: "display:block" %>
    <%= form.number_field :inventory_count, in: 0..1000, step: 1 %>
  </div>
  <div>
    <%= form.submit t(".submit") %>
  </div>
<% end %>
</section>
